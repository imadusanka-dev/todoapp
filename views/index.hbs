<div class="container">
    <h2 class="text-center">To-Do List</h2>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form action="/addtodo" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="I want to.." name="detail" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-success float-right" type="submit">Add To-Do</button>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
    <br>

        <div class="row">
            <div class="table-responsive">
                <table class="table table-hover" align="center">
                    <thead>
                        <tr>
                            <th scope="col">Details</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each todos}}
                    <tr>
                        <td>{{this.detail}}</td>
                        <td>{{this.created_at}}</td>
                        <td>
                            <a href="/edit/{{this.id}}"><button class="btn btn-primary">Edit</button></a>
                            <a href="/delete/{{this.id}}"><button class="btn btn-danger">Delete</button></a>
                        </td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
