<div class="container">
    <h2 class="text-center">Update To-Do</h2>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            {{#each todos}}
            <form action="/update/{{this.id}}" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="detail" value="{{this.detail}}" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-info  float-right" type="submit">Update To-Do</button>
                    <a href="/"><button class="btn btn-secondary">Back</button></a>
                </div>
            </form>
            {{/each}}
        </div>
        <div class="col-md-2"></div>
    </div>
</div>